<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/istanbulFrame"
        >

        <ImageView
            android:id="@+id/istanbul"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:background="@drawable/tarihi_istanbul" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/istanbulFrame"
        android:layout_centerHorizontal="true"
        android:text="@string/istanbul"
        android:textAlignment="center"
        android:textColor="@color/istanbul"
        android:textSize="50sp" />

    <!-- Family category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/istanbulFrame">

        <ImageView
            android:id="@+id/ankara"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:background="@drawable/anitkabir" />


    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/ankara"
        android:textAlignment="center"
        android:textColor="@color/ankara"
        android:textSize="50sp" />

</RelativeLayout>